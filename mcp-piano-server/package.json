{
  "name": "mcp-piano-server",
  "version": "1.0.0",
  "description": "A Model Context Protocol server for piano and music theory operations",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "clean": "rimraf dist",
    "dev": "tsc --watch",
    "start": "npm run build && node dist/server.js",
    "start:full": "npm run build && echo 'ðŸŽ¹ Starting Piano Interface Server...' && node dist/server.js",
    "test": "jest --passWithNoTests",
    "web-server": "npm run build && node dist/server.js",
    "mcp-server": "npm run build && node dist/simple-piano-mcp.js",
    "test-mcp": "npm run build && node dist/test-client.js dist/simple-piano-mcp.js",
    "test-mcp-interactive": "npm run build && node dist/test-client.js dist/simple-piano-mcp.js interactive",
    "demo": "npm run build && echo 'ðŸŽ¹ Starting demo...' && node dist/test-client.js dist/simple-piano-mcp.js",
    "watch": "tsc --watch",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "tsc --noEmit",
    "prepare": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "piano",
    "music",
    "theory",
    "chords",
    "scales",
    "progressions"
  ],
  "author": "aisloppyjoel@gmail.com",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "package.json"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@types/cors": "^2.8.18",
    "@types/express": "^4.17.22",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "ws": "^8.18.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^20.10.0",
    "@types/ws": "^8.18.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.1",
    "tsx": "^4.19.4",
    "typescript": "^5.3.3"
  }
}
